# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================

# Токен бота от @BotFather
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Webhook настройки (опционально, для продакшена)
USE_WEBHOOK=false
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PATH=/webhook
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8080

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=telegram_bot
POSTGRES_USER=botuser
POSTGRES_PASSWORD=changeme

# Формат строки подключения: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ========================================
# REDIS CONFIGURATION
# ========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_DB=0

# Формат строки подключения
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Формат логов: json, console
LOG_FORMAT=console

# Путь к файлу логов
LOG_FILE_PATH=logs/bot.log

# Ротация логов
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ========================================
# APPLICATION SETTINGS
# ========================================

# Окружение: development, production
ENVIRONMENT=development

# Часовой пояс
TIMEZONE=Europe/Moscow

# Язык по умолчанию
DEFAULT_LANGUAGE=ru

# ========================================
# ADMIN SETTINGS
# ========================================

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# ========================================
# PAYMENT SETTINGS (опционально)
# ========================================

# Токен платёжной системы (ЮKassa, Stripe, etc.)
PAYMENT_TOKEN=

# ========================================
# EXTERNAL APIs (опционально)
# ========================================

# API ключи для внешних сервисов
SENTRY_DSN=
AMPLITUDE_API_KEY=

# ========================================
# FEATURE FLAGS
# ========================================

# Включить/выключить функционал
ENABLE_PAYMENTS=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# ========================================
# RATE LIMITING
# ========================================

# Лимит запросов на пользователя в минуту
RATE_LIMIT_PER_MINUTE=20

# ========================================
# DOCKER COMPOSE SETTINGS
# ========================================

# Порты для сервисов (используется в docker-compose)
ADMINER_PORT=8080
